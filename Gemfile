  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development do
  gem 'quiet_assets'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'rails_best_practices'
  gem 'factory_girl_rails'
  gem 'faker'
end

group :test do
  gem 'spork'
  gem 'rb-inotify'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'simplecov'
  gem 'shoulda'
end
